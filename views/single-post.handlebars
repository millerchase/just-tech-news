<article class='post'>
  <div class='title'>
    <a href='{{post.post_url}}' target='blank'>{{post.title}}</a>
    <span>({{post.post_url}})</span>
  </div>
  <div class='meta'>
    {{post.vote_count}}
    point(s) by
    {{post.user.username}}
    on
    {{post.created_at}}
    |
    <a href='/post/{{post.id}}'>{{post.comments.length}} comment(s)</a>
  </div>
</article>

{{#if loggedIn}}
  <form class='comment-form'>
    <div>
      <textarea name='comment-body' cols='30' rows='10'></textarea>
    </div>
    <div>
      <button type='submit'>add comment</button>
      <button type='button' class='upvote-btn'>upvote</button>
    </div>
  </form>
{{/if}}

<div class='comments'>
  {{#each post.comments}}
    <section class='comment'>
      <div class='meta'>
        {{user.username}}
        on
        {{created_at}}
      </div>
      <dive class='text'>
        {{comment_text}}
      </dive>
    </section>
  {{/each}}
</div>

{{#if loggedIn}}
  <script src='/js/comment.js'></script>
  <script src='/js/upvote.js'></script>
{{/if}}